[core]
	editor = nvim
	excludesfile = ~/.config/git/ignore

[diff]
	tool = vscode

[difftool "vscode"]
	cmd = code --wait --diff --new-window $LOCAL $REMOTE

[init]
	defaultBranch = main

[merge]
	conflictstyle = diff3
	ff = only
	tool = vscode

[mergetool]
	keepBackup = false

[mergetool "vscode"]
	cmd = code --wait --new-window $MERGED

[push]
	default = current
	followTags = true

[status]
	showUntrackedFiles = all

[url "git@github.com:"]
	insteadOf = gh:

[user]
	name = Daniel Mentiplay
	email = daniel.mentiplay@proton.me
