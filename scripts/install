def main():
    if sys.platform == "darwin":
        set_mac_defaults()
        install_with_brew()
        install_code_extensions()
    elif sys.platform == "linux":
        if is_linux_distro("Ubuntu"):
            install_with_apt()
        if is_linux_distro("Fedora"):
            install_with_dnf()
    else:
        raise RuntimeError("unsupported platform")
    install_fzf()
    install_starship()
    install_vim_plug()


if __name__ == "__main__":
    main()
